{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
{#    <a href="{{ path('produits_index')}}" class="btn btn-light btn-lg mt-5">Retour produit</a>#}
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <h1 class="display-4 text-center">Product detail</h1>
                <ul class="list-group">
                    <li class="list-group-item">{{ product.name }}</li>
                    <li class="list-group-item">{{ product.description | raw }}</li>
                    <li class="list-group-item">{{ product.price | number_format(2) }}</li>
                    {% if(product.available) %}
                        <li class="list-group-item bg-success text-white font-weight-bold">ce produit est disponible</li>
                    {% else %}
                        <li class="list-group-item bg-danger text-white font-weight-bold">  ce produit n'est pas disponible actuellement</li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
