{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <h1 class="display-4 text-center">Category detail</h1>
            <ul class="list-group">
                <li class="list-group-item">{{ category.name }}</li>
                <li class="list-group-item">{{ category.description | raw }}</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
